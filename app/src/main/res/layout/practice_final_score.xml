<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".practice_finalScore"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="123dp"
        android:layout_height="44dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="57dp"
        android:background="@drawable/buttonshape"
        android:backgroundTint="#698b47"
        android:fontFamily="@font/cormorant"
        android:text="Submit Score"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="@+id/textView12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtCompName" />

    <TextView
        android:id="@+id/txtCompName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="7dp"
        android:fontFamily="@font/cormorant"
        android:text="Havrvey Invitational"
        android:textColor="#111"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="0dp"
        android:layout_height="21dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="105dp"
        android:fontFamily="@font/cormorant"
        android:text="Paudie Nolan"
        android:textColor="#111"
        app:layout_constraintBottom_toTopOf="@+id/divider4"
        app:layout_constraintEnd_toStartOf="@+id/txtCompName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtStableford_finalScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="30dp"
        android:text="34 points"
        android:textColor="#111"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/btnSubmit"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/txtGIR"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="78dp"
        android:layout_marginBottom="77dp"
        android:fontFamily="@font/cormorant"
        android:text="GIR: 14/18"
        android:textColor="#111"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/divider5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStableford_finalScore" />

    <TextView
        android:id="@+id/txtPutts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/cormorant"
        android:text="34 putts"
        android:textColor="#111"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/txtFH"
        app:layout_constraintTop_toBottomOf="@+id/txtFH" />

    <TextView
        android:id="@+id/txtBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/cormorant"
        android:text="Back 9: 20 points"
        android:textColor="#111"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/txtFront"
        app:layout_constraintTop_toBottomOf="@+id/txtFront" />

    <TextView
        android:id="@+id/txtFH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:fontFamily="@font/cormorant"
        android:text="FR: 10/18"
        android:textColor="#111"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/txtGIR"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/txtFront"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/cormorant"
        android:text="Front 9: 18 points"
        android:textColor="#111"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider4" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/cormorant"
        android:text="Your Stats"
        android:textColor="#111"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="13dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSubmit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_clipped_rev_1" />

    <View
        android:id="@+id/divider4"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="81dp"
        android:background="#111"
        app:layout_constraintBottom_toBottomOf="@+id/txtFH"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <View
        android:id="@+id/divider5"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="138dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="137dp"
        android:background="#111"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider4" />

</android.support.constraint.ConstraintLayout>